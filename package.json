{
  "name": "browsertools",
  "version": "1.0.0",
  "description": "a collection of tools for use in shiny",
  "main": "index.js",
  "scripts": {
    "clean": "rm -rf inst/assets/js",
    "build": "babel inst/assets/src -d inst/assets/js --presets minify --no-comments",
    "document" : "Rscript -e \"devtools::document()\"",
    "package": "cd .. && R CMD build browsertools && R CMD install browsertools_*.tar.gz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/davidruvolo51/browsertools.git"
  },
  "keywords": [
    "shiny",
    "js",
    "css"
  ],
  "author": "dcruvolo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/davidruvolo51/browsertools/issues"
  },
  "homepage": "https://github.com/davidruvolo51/browsertools#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.3",
    "@babel/core": "^7.8.3",
    "@babel/preset-env": "^7.8.3",
    "babel-preset-minify": "^0.5.1"
  }
}
