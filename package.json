{
    "name": "browsertools",
    "version": "0.1.73",
    "author": "dcruvolo",
    "license": "MIT",
    "description": "This package contains a series of functions for running JavaScript functions in shiny.",
    "keywords": [
        "shiny",
        "js"
    ],
    "main": "index.js",
    "scripts": {
        "clean": "rm -r inst/browsertools/browsertools.min.* .cache",
        "dev": "parcel dev inst/browsertools/src/index.js -d inst/browsertools -o inst/browsertools/browsertools.min.js --no-source-maps",
        "build": "parcel build inst/browsertools/src/index.js -d inst/browsertools -o inst/browsertools/browsertools.min.js --no-source-maps",
        "demo": "Rscript -e \"shiny::runApp(appDir = './inst/browsertools-demo', port = 8000, launch.browser = FALSE)\"",
        "demo_dev": "parcel inst/browsertools-demo/src/index.js -d inst/browsertools-demo/www/ -o inst/browsertools-demo/www/demo.min.js --no-cache --no-source-maps",
        "demo_build": "parcel build inst/browsertools-demo/src/index.js -d inst/browsertools-demo/www/ -o inst/browsertools-demo/www/demo.min.js --no-cache --no-source-maps",
        "demo_clean" : "rm -rf inst/browsertools-demo/www/demo.min.*",
        "shiny" : "Rscript -e \"shiny::runApp(appDir = 'dev/dev-app/', port = 8000, launch.browser = FALSE)\""
    },
    "homepage": "https://github.com/davidruvolo51/browsertools",
    "devDependencies": {
        "@babel/cli": "^7.8.3",
        "@babel/core": "^7.9.6",
        "@babel/preset-env": "^7.9.6",
        "autoprefixer": "^9.7.6",
        "babel-preset-minify": "^0.5.1",
        "cssnano": "^4.1.10",
        "parcel": "1.12.4",
        "postcss-modules": "^2.0.0",
        "sass": "^1.26.5"
    },
    "dependencies": {
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/davidruvolo51/browsertools.git"
    },
    "bugs": {
        "url": "https://github.com/davidruvolo51/browsertools/issues"
    }
}
