{
    "name": "browsertools",
    "version": "0.1.6",
    "author": "dcruvolo",
    "license": "ISC",
    "description": "a collection of tools for use in shiny",
    "keywords": [
        "shiny",
        "js"
    ],
    "main": "index.js",
    "scripts": {
        "clean": "rm -r inst/browsertools/js/browsertools.min.js inst/browsertools/css/browsertools.min.css",
        "js": "parcel build inst/browsertools/js/index.js -d inst/browsertools/js/ -o inst/browsertools/js/browsertools.min.js --no-cache --no-source-maps",
        "sass": "parcel build inst/browsertools/css/styles.scss -d inst/browsertools/css/ -o inst/browsertools/css/browsertools.min.css --no-cache --no-source-maps",
        "build": "yarn js && yarn sass",
        "document": "Rscript -e \"devtools::document()\"",
        "uninstall": "Rscript -e \"devtools::uninstall()\"",
        "package": "Rscript -e \"devtools::build()\" && Rscript -e \"devtools::install()\"",
        "demo": "Rscript -e \"shiny::runApp(appDir = './inst/demo', port = 8000, launch.browser = FALSE)\"",
        "demo_dev": "parcel inst/demo/src/index.js -d inst/demo/www/ -o inst/demo/www/demo.min.js --no-cache --no-source-maps",
        "demo_build": "parcel build inst/demo/src/index.js -d inst/demo/www/ -o inst/demo/www/demo.min.js --no-cache --no-source-maps",
        "demo_clean" : "rm -rf inst/demo/www/demo.min.*"
    },
    "homepage": "https://github.com/davidruvolo51/browsertools",
    "devDependencies": {
        "@babel/cli": "^7.8.3",
        "@babel/core": "^7.9.6",
        "@babel/preset-env": "^7.9.6",
        "autoprefixer": "^9.7.6",
        "babel-preset-minify": "^0.5.1",
        "cssnano": "^4.1.10",
        "parcel": "1.12.4",
        "postcss-modules": "^2.0.0",
        "sass": "^1.26.5"
    },
    "dependencies": {
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/davidruvolo51/browsertools.git"
    },
    "bugs": {
        "url": "https://github.com/davidruvolo51/browsertools/issues"
    }
}
